<!-- this page to display a table of all movies for the admin to edit or delete -->
<div class="container">
  <h3>Movies Index</h3>

<table>
    <tr>
        <th>Title</th>
        <!-- <th>picture</th> -->
        <th>Image<th>
        <th>Description</th>
        <th>Genre</th>
        <th>Duration</th>
        <th>Showdays</th>
        <th>Showtimes</th>
    </tr>
    <% movies.forEach(function(movie){  %>
    <tr>
  <td>
<%=movie.title%>
  </td>
  <td>
    <img src="../movie_images/<%=movie.img%>" width="200px" height="200px" >
   </td>
  <td>
    <%=movie.description%>
      </td>
      <td>
        <%=movie.genre%>
      </td>
      <td>
        <%=movie.duration%>
          </td>

          <td>
            <%= dayOptions %>  
                </td>
                <td>
                  <% movie.showTimes.forEach(function(time){ %>
                        <%= time %>
                    <% }) %>
                    </td>
      
        <td>
            <form method="POST" action="/admin/delete?id=<%=movie._id%>">
                <button type="submit">DELETE</button>
            </form>
        </td>
    <td><a href="/admin/edit?id=<%=movie._id%>">UPDATE</a></td>
    </tr>
   <% })  %>
</table>
</div>


</div>