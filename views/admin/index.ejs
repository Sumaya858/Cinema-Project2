<h3>movie Index</h3>


<table>
    <tr>
        <th>title</th>
        <!-- <th>picture</th> -->
        <th>discription</th>
        <th>Genre</th>
        <th>duration</th>
        <th>date</th>
        <th>time</th>
    </tr>


    <% movies.forEach(function(movie){  %>
    <tr>

  <td>
<%=movie.title%>
  </td>

  <td>
    <%=movie.description%>
      </td>

      <td>
        <%=movie.genre%>
      </td>

      <td>
        <%=movie.duration%>
          </td>

    <td>
        <%=movie.date%>
          </td>

          <td>
            <%=movie.time%>
              </td>

              
        <td>
            <form method="POST" action="/admin/delete?id=<%=movie._id%>">
                <button type="submit">DELETE</button>
            </form>
        </td>
    <td><a href="/admin/edit?id=<%=movie._id%>">UPDATE</a></td>

    </tr>
   <% })  %>
</table>