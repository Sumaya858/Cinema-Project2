<!-- Navigation Bar -->
<nav class="nav-bar shift">
    <div class="logo">
    <img src="../img/logo2.png">
    </div>
    <ul class="nav justify-content-center align-self-center ">
        <li class="nav-item">
          <a class="nav-link active white" aria-current="page" href="/"><i class="fas fa-home"></i> Home</a>
